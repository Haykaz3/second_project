<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010519"
    android:orientation="vertical"
    tools:context=".Register">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:lottie_rawRes="@raw/login_register_gif" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Create account"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="@dimen/_350sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/person_24"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/white"
        android:gravity="left|center"
        android:hint="Enter your email"
        android:textSize="@dimen/_15sdp"
        android:inputType="text"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="#EEEEEE"
        android:textColorHint="#EEEEEE" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:hint="Enter your password"
        android:textColorHint="#EEEEEE"
        app:counterTextColor="@color/purple"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/pale"
        app:startIconDrawable="@drawable/lock_24"
        app:startIconTint="@color/white"
        app:startIconMinSize="@dimen/_50sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegPass"
            android:layout_width="@dimen/_350sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/rounded_edittext"
            android:textSize="@dimen/_15sdp"
            android:inputType="textPassword"
            android:textColor="@color/white" />



    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_Confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:hint="Confirm your password"

        android:textColorHint="#EEEEEE"
        app:counterTextColor="@color/purple"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/pale"
        app:startIconDrawable="@drawable/lock_24"
        app:startIconTint="@color/white"
        app:startIconMinSize="@dimen/_50sdp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmRegPass"
            android:layout_width="@dimen/_350sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/rounded_edittext"
            android:textSize="@dimen/_15sdp"
            android:inputType="textPassword"
            android:textColor="@color/white" />



    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Sign-Up"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:backgroundTint="#0D74C0"
        app:cornerRadius="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="375dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Sign-In"
            android:textSize="@dimen/_15sdp"
            android:textColor="#0D74C0"/>

    </LinearLayout>

</LinearLayout>